{
  "manifest_version": 3,
  "name": "JIRA Transition Blocker",
  "version": "1.0.0",
  "description": "Blocks specific JIRA actions",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://atc.bmwgroup.net/jira/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://atc.bmwgroup.net/jira*"
  ],
  "update_url": "https://lumibit.github.io/jira-chrome-extension/updates.xml",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "rules_action171.json"
      },
      {
        "id": "ruleset_2",
        "enabled": false,
        "path": "rules_action161_221.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JIRA Transition Blocker"
  },
  "icons": {
    "16": "extension-icon.png",
    "48": "extension-icon.png",
    "128": "extension-icon.png"
  }
}